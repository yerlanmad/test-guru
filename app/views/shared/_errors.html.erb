<% if resourse.present? && resourse.errors.present? %>
  <%= content_tag :div, class: 'resourse-errors', data: { resourse_id: resourse.id } do %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <h2>
      <%= t('.header', count: resourse.errors.count) %>:
    </h2>
    <ul>
      <% resourse.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<% end %>
