<p>
  <strong><%= t('.title') %>:</strong>
  <%= @test.title %>
</p>

<p>
  <strong><%= t('.level') %>:</strong>
  <%= test_level(@test) %>
</p>

<p>
  <strong><%= t('.category_id') %>:</strong>
  <%= test_category(@test) %>
</p>

<h2><%= t('.header', title: @test.title) %></h2>
<table>
  <tr>
    <th><%= t('.id') %></th>
    <th><%= t('.body') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<p>
  <%= link_to t('links.new_question'), new_admin_test_question_path(@test) %>
</p>

<%= link_to t('links.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('links.back'), admin_tests_path %>
