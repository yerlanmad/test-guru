<div class="row justify-content-center mt-3">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path %>
    </p>

    <%= render 'shared/errors', resourse: @test %>

    <div class="table-responsive">
      <table class="table table-light table-striped mt-3">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.level') %></th>
          <th><%= t('.category_id') %></th>
          <th><%= t('.questions_count') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>

        <%= render @tests %>
      </table>
    </div>
  </div>
</div>