<div class="row justify-content-center mt-3">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('links.new_badge'), new_admin_badge_path %>
    </p>

    <%= render 'shared/errors', resource: @badge %>

    <div class="table-responsive">
      <table class="table table-light table-striped mt-3">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('.name') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.icon') %></th>
          <th><%= t('.level') %></th>
          <th><%= t('.category_id') %></th>
          <th><%= t('.first_attempt') %></th>
          <th><%= t('.all_in_category') %></th>
          <th><%= t('.all_in_level') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>

        <%= render @badges %>
      </table>
    </div>
  </div>
</div>